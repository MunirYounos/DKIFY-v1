<div id="section-{{ section.id }}" class="datetime-counter-inner {% unless section.settings.show_on_desktop %} medium--hide large--hide{% endunless %} {% unless section.settings.show_on_mobile %} small--hide{% endunless %} {% if full_width %}section-full-width featured-image-wrapper{% endif %} {{ section.settings.section_style }}" data-section-id="{{ section.id }}">
  <div class="counter-box">
    <div class="datetime_wrapper{% if full_width -%} wrapper-full{% else %} wrapper{% endif %}">
			{%- assign eventDate = section.settings.counter__date -%}
			{%- if eventDate != blank -%}
			<div id="timer" class="datetime" data-time="{{ eventDate }}" style="margin-top:{{section.settings.counter__margin}}px;"></div>
			{%- endif -%}
    </div>
  </div>
      {%- if section.settings.counter__done != blank -%}
      <div style="opacity: 0; height: 0;" class="counter__done" id="counter__done">{{section.settings.counter__done}}</div>
      {%- endif -%}
</div>

{% schema %}
  {
    "name": "Date time counter",
		"class": "datetime-counter-outer",
    "settings": [
       {
        "type": "checkbox",
        "id": "show_on_desktop",
        "label": "Show on desktop",
        "default": true
       },
       {
        "type": "checkbox",
        "id": "show_on_mobile",
        "label": "Show on mobile",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "full_width",
        "label": "Full width",
        "default": true
      },
      {
        "type": "select",
        "id": "section_style",
        "label": "Section style",
        "default": "section-blank",
        "options": [
          {
            "value": "section-blank",
            "label": "Blank background"
          },
		      {
            "value": "section-default",
            "label": "Accent background"
          },
          {
            "value": "section-border",
            "label": "Border top"
          }
        ]
      },
      {
        "type": "text",
        "id": "counter__date",
        "label": "date format: Oct 21, 2021 14:20:59 "
      },
      {
        "type": "text",
        "id": "counter__done",
        "label": "Add text after counter is done.",
        "default": "The countdown time is done!"
      },
      {
        "type": "range",
        "id": "counter__margin",
        "min": -100,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Counter margins: assign values from -100 to +100.",
        "default": 0
      }
	  ],
	  "presets": [
      {
        "name":  "Date time counter",
        "category":"Date and Time counter"
      }
    ]
  }
{% endschema %}
